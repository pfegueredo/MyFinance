@model ContaModel

<h3>Criar nova conta</h3>

<form asp-controller="Conta" asp-action="CriarConta">
    <div class="form-group">
        <label for="nome">Nome: </label>
        <input type="text" class="form-control" asp-for="Nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Data_Nascimento">Saldo: </label>
        <input type="number" class="form-control" asp-for="Saldo">
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-block btn-success">Salvar</button>


</form>